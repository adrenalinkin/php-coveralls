#!/usr/bin/env php
<?php

if (file_exists(__DIR__ . '/../vendor/autoload.php')) {
    // Called from local git clone.
    require __DIR__ . '/../vendor/autoload.php';
} elseif (file_exists(__DIR__ . '/../../../autoload.php')) {
    // Called from your project's vendor dir.
    require __DIR__ . '/../../../autoload.php';
} else {
    die(
        'You need to set up the project dependencies using the following commands:' . PHP_EOL .
        'curl -s http://getcomposer.org/installer | php' . PHP_EOL .
        'php composer.phar install' . PHP_EOL
    );
}

use PhpCoveralls\Bundle\CoverallsBundle\Console\Application;
use PhpCoveralls\Bundle\CoverallsBundle\Console\ApplicationSf6;

$rootDir = getcwd();

if (PHP_VERSION_ID >= 71000) {
    $app = new ApplicationSf6($rootDir, 'PHP client library for Coveralls API', '@package_version@');
} else {
    $app = new Application($rootDir, 'PHP client library for Coveralls API', '@package_version@');
}

$app->run();
